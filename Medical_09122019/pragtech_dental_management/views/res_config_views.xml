<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="invoice_discount_solution.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='insurance']" position="replace">
                    <div class="insurance" invisible="1">
                        <label string="Insurance difference Account"/>
                        <field name="default_insurance_diff_account"/>
                    </div>
                </xpath>
            </field>
    </record>

</odoo>
