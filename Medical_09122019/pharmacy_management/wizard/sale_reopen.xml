<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_reopen_wizard" model="ir.ui.view">
            <field name="name">sale.reopen.form</field>
            <field name="model">sale.reopen</field>
            <field name="arch" type="xml">
                <form string="Reversal Reason">
                    <group>
                        <field name="reason_reversal" />
                    </group>
                    <p style="color:Red;">System will cancel the related records on confirmation !!!</p>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
    </record>
</odoo>